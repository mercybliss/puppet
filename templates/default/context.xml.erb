<!-- The contents of this file will be loaded for each web application -->
<Context>

    <!-- Default set of monitored resources -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!-- <Manager pathname="" /> -->

    <!-- Uncomment this to enable Comet connection tacking (provides events on session expiration as well as webapp lifecycle) -->
    <!--
    <Valve className="org.apache.catalina.valves.CometConnectionManagerValve" />
    -->

    <!-- Application Variables/Config -->
    <Environment name="liquibase.startup.shouldRun" type="java.lang.String" value="true"/>

    <!-- AWS S3 Media -->
    <Environment name="app.aws.s3.accessKey" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_accesskey'] %>"/>
    <Environment name="app.aws.s3.bucket" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_bucket'] %>"/>
    <Environment name="app.aws.s3.environment" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_environment'] %>"/>
    <Environment name="app.aws.s3.protocol" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_protocol'] %>"/>
    <Environment name="app.aws.s3.region" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_region'] %>"/>
    <Environment name="app.aws.s3.secretKey" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_secretkey'] %>"/>
    <Environment name="app.aws.s3.urlPrefix" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['aws_s3_urlprefix'] %>"/>

    <!-- Database Datasource Config -->
    <Environment name="spring.datasource.serverName" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['db_servername'] %>" />
    <Environment name="spring.datasource.databaseName" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['db_databasename'] %>" />
    <Environment name="spring.datasource.username" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['db_username'] %>" />
    <Environment name="spring.datasource.password" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['db_password'] %>" />

    <!--IMPERSONATE-->
    <Environment name="app.security.impersonate.targetURL" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['security_impersonate_targeturl'] %>"/>

    <!-- MAIL -->
    <Environment name="mail.host" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_host'] %>" />
    <Environment name="mail.port" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_port'] %>" />
    <Environment name="mail.tls" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_tls'] %>" />
    <Environment name="mail.auth" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_auth'] %>" />
    <Environment name="mail.username" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_username'] %>" />
    <Environment name="mail.password" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_password'] %>" />
    <Environment name="mail.from.email" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_from_email'] %>" />
    <Environment name="mail.from.name" type="java.lang.String" value="<%= node['deploy']['webapp']['environment']['mail_from_name'] %>" />

</Context>
